<%- include('../layout', { body: `
<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-800">Gestionar Conceptos de Préstamos</h2>
      <div class="flex gap-2">
        <button onclick="abrirModalNuevoConcepto()" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg">
          <i class="fas fa-plus mr-2"></i>Nuevo Concepto
        </button>
        <a href="/gastos/prestamos" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg">
          <i class="fas fa-arrow-left mr-2"></i>Volver
        </a>
      </div>
    </div>

    ${success ? '<div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">' + success + '</div>' : ''}
    ${error ? '<div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">' + error + '</div>' : ''}

    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nombre</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Descripción</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          ${conceptos && conceptos.length > 0 ? conceptos.map(function(concepto) {
            return '<tr class="hover:bg-gray-50">' +
              '<td class="px-4 py-3 text-sm font-medium text-gray-900">' + concepto.nombre + '</td>' +
              '<td class="px-4 py-3 text-sm text-gray-500">' + (concepto.descripcion || '-') + '</td>' +
              '<td class="px-4 py-3 whitespace-nowrap">' +
                (concepto.activo ? 
                  '<span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">Activo</span>' :
                  '<span class="px-2 py-1 bg-red-100 text-red-800 rounded-full text-xs font-medium">Inactivo</span>') +
              '</td>' +
              '<td class="px-4 py-3 whitespace-nowrap text-sm">' +
                '<button onclick="editarConcepto(' + concepto.id + ', \'' + concepto.nombre.replace(/'/g, "\\'") + '\', \'' + (concepto.descripcion || '').replace(/'/g, "\\'") + '\', ' + concepto.activo + ')" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded mr-2">' +
                  '<i class="fas fa-edit mr-1"></i>Editar' +
                '</button>' +
              '</td>' +
            '</tr>';
          }).join('') : '<tr><td colspan="4" class="px-4 py-8 text-center text-gray-500">No hay conceptos registrados</td></tr>'}
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal Nuevo/Editar Concepto -->
<div id="modalConcepto" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 flex items-center justify-center">
  <div class="relative p-6 border w-full max-w-md shadow-lg rounded-lg bg-white m-4">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-bold text-gray-900" id="tituloModalConcepto">Nuevo Concepto</h3>
      <button onclick="cerrarModalConcepto()" class="text-gray-400 hover:text-gray-600">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <form id="formConcepto" onsubmit="guardarConcepto(event)">
      <input type="hidden" name="conceptoId" id="conceptoId">
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Nombre *</label>
        <input type="text" name="nombre" id="nombreConcepto" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" placeholder="Ej: Anticipo de sueldo">
      </div>
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Descripción</label>
        <textarea name="descripcion" id="descripcionConcepto" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" placeholder="Descripción del concepto..."></textarea>
      </div>
      <div class="mb-4">
        <label class="flex items-center">
          <input type="checkbox" name="activo" id="activoConcepto" checked class="mr-2">
          <span class="text-sm text-gray-700">Activo</span>
        </label>
      </div>
      <div class="flex justify-end gap-2">
        <button type="button" onclick="cerrarModalConcepto()" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg">Cancelar</button>
        <button type="submit" class="px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg">Guardar</button>
      </div>
    </form>
  </div>
</div>

<script>
function abrirModalNuevoConcepto() {
  document.getElementById('tituloModalConcepto').textContent = 'Nuevo Concepto';
  document.getElementById('formConcepto').reset();
  document.getElementById('conceptoId').value = '';
  document.getElementById('activoConcepto').checked = true;
  document.getElementById('modalConcepto').classList.remove('hidden');
}

function editarConcepto(id, nombre, descripcion, activo) {
  document.getElementById('tituloModalConcepto').textContent = 'Editar Concepto';
  document.getElementById('conceptoId').value = id;
  document.getElementById('nombreConcepto').value = nombre;
  document.getElementById('descripcionConcepto').value = descripcion || '';
  document.getElementById('activoConcepto').checked = activo;
  document.getElementById('modalConcepto').classList.remove('hidden');
}

function cerrarModalConcepto() {
  document.getElementById('modalConcepto').classList.add('hidden');
  document.getElementById('formConcepto').reset();
}

async function guardarConcepto(event) {
  event.preventDefault();
  const formData = new FormData(event.target);
  const conceptoId = formData.get('conceptoId');
  const data = {
    nombre: formData.get('nombre'),
    descripcion: formData.get('descripcion'),
    activo: formData.get('activo') === 'on',
  };

  try {
    const url = conceptoId ? '/gastos/prestamos/conceptos/' + conceptoId : '/gastos/prestamos/conceptos';
    const method = conceptoId ? 'PUT' : 'POST';

    const response = await fetch(url, {
      method: method,
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    });

    const result = await response.json();

    if (result.success) {
      window.location.reload();
    } else {
      alert('Error: ' + (result.error || 'No se pudo guardar el concepto'));
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error al guardar el concepto');
  }
}
</script>
` }) %>

