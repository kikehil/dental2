<%- include('../layout', { body: `
<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
    ${success ? '<div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">' + success + '</div>' : ''}

    ${error ? '<div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">' + error + '</div>' : ''}

    <div class="grid md:grid-cols-2 gap-4 mb-6">
      <a href="/cortes/historial" class="bg-primary-500 hover:bg-primary-600 text-white p-6 rounded-lg shadow-md transition flex items-center justify-between">
        <div>
          <h3 class="font-bold text-lg mb-1">Historial de Cortes</h3>
          <p class="text-primary-100 text-sm">Ver todos los cortes realizados</p>
        </div>
        <i class="fas fa-history text-3xl opacity-50"></i>
      </a>

      <a href="/pos" class="bg-secondary-500 hover:bg-secondary-600 text-white p-6 rounded-lg shadow-md transition flex items-center justify-between">
        <div>
          <h3 class="font-bold text-lg mb-1">Realizar Corte</h3>
          <p class="text-secondary-100 text-sm">Ir al punto de venta</p>
        </div>
        <i class="fas fa-cash-register text-3xl opacity-50"></i>
      </a>
    </div>

    ${saldoInicialHoy ? 
      '<div class="bg-green-50 border border-green-200 rounded-lg p-4">' +
        '<div class="flex items-center gap-3">' +
          '<i class="fas fa-check-circle text-green-500 text-xl"></i>' +
          '<div>' +
            '<p class="font-medium text-green-800">Saldo inicial registrado</p>' +
            '<p class="text-sm text-green-600">Fecha: ' + moment(saldoInicialHoy.fecha).format('DD/MM/YYYY') + '</p>' +
          '</div>' +
        '</div>' +
      '</div>' :
      '<div class="bg-amber-50 border border-amber-200 rounded-lg p-4">' +
        '<div class="flex items-center gap-3">' +
          '<i class="fas fa-exclamation-triangle text-amber-500 text-xl"></i>' +
          '<div>' +
            '<p class="font-medium text-amber-800">No hay saldo inicial registrado hoy</p>' +
            '<p class="text-sm text-amber-600">Debes registrar el saldo inicial en el punto de venta</p>' +
          '</div>' +
        '</div>' +
      '</div>'
    }
  </div>
</div>
` }) %>
