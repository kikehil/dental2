<header class="bg-white shadow-sm border-b border-gray-200 px-4 py-3 flex-shrink-0">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-xl font-bold text-gray-800"><%= title %></h1>
      <p class="text-xs text-gray-500">
        <i class="fas fa-calendar-day mr-1"></i>
        <%= now().format('dddd, D [de] MMMM [de] YYYY [a las] HH:mm') %>
      </p>
    </div>
    
    <div class="flex items-center gap-3">
      <% if (currentPath && currentPath.startsWith('/pos')) { %>
      <!-- Saldos en tiempo real - Solo en módulo POS -->
      <div id="saldosContainer" class="flex items-center gap-2 mr-2">
        <div class="bg-green-50 border border-green-200 rounded-lg px-3 py-1.5">
          <p class="text-xs text-green-600 font-medium">Efectivo</p>
          <p id="saldoEfectivo" class="text-sm font-bold text-green-700">$0.00</p>
        </div>
        <div class="bg-blue-50 border border-blue-200 rounded-lg px-3 py-1.5">
          <p class="text-xs text-blue-600 font-medium">BBVA</p>
          <p id="saldoBbva" class="text-sm font-bold text-blue-700">$0.00</p>
        </div>
        <div class="bg-purple-50 border border-purple-200 rounded-lg px-3 py-1.5">
          <p class="text-xs text-purple-600 font-medium">Azteca</p>
          <p id="saldoAzteca" class="text-sm font-bold text-purple-700">$0.00</p>
        </div>
        <div class="bg-indigo-50 border border-indigo-200 rounded-lg px-3 py-1.5">
          <p class="text-xs text-indigo-600 font-medium">Mercado Pago</p>
          <p id="saldoMercadoPago" class="text-sm font-bold text-indigo-700">$0.00</p>
        </div>
      </div>
      
      <!-- Botones de acción -->
      <button onclick="abrirModalRetiroManual()" class="bg-amber-500 hover:bg-amber-600 text-white px-4 py-2 rounded-lg transition flex items-center gap-2 text-sm font-medium">
        <i class="fas fa-money-bill-wave"></i>
        <span>Realizar Retiro</span>
      </button>
      <button onclick="abrirModalCorteManual()" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg transition flex items-center gap-2 text-sm font-medium">
        <i class="fas fa-cut"></i>
        <span>Realizar Corte</span>
      </button>
      <% } %>
      <% if (currentPath && currentPath.startsWith('/pacientes')) { %>
      <!-- Botón Nuevo Paciente - Solo en módulo Pacientes -->
      <a href="/pacientes/crear" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg transition flex items-center gap-2 text-sm font-medium">
        <i class="fas fa-plus"></i>
        <span>Nuevo Paciente</span>
      </a>
      <% } %>
      <% if (currentPath && currentPath.startsWith('/doctores')) { %>
      <!-- Botón Nuevo Doctor - Solo en módulo Doctores -->
      <a href="/doctores/crear" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg transition flex items-center gap-2 text-sm font-medium">
        <i class="fas fa-plus"></i>
        <span>Nuevo Doctor</span>
      </a>
      <% } %>
      <!-- Perfil -->
      <a href="/perfil" class="text-gray-600 hover:text-gray-800 p-2" title="Mi Perfil">
        <i class="fas fa-cog text-lg"></i>
      </a>
    </div>
  </div>
</header>

