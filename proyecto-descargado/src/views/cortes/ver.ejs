      <!-- Saldo Esperado -->
      <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl shadow-md border border-purple-200 p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center justify-between mb-3">
          <div class="bg-purple-500 rounded-lg p-3">
