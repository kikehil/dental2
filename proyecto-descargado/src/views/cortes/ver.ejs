<%
  let gastosHtml = '';
  const gastosList = typeof gastos !== 'undefined' && gastos ? gastos : [];
  let totalGastos = 0;
  let gastosEfectivo = 0;
  let gastosTarjeta = 0;
  let gastosTransferencia = 0;
  let gastosTarjetaAzteca = 0;
  let gastosTarjetaBbva = 0;
  let gastosTarjetaMp = 0;
  let gastosTransferenciaAzteca = 0;
  let gastosTransferenciaBbva = 0;
  let gastosTransferenciaMp = 0;
  
  if (gastosList.length > 0) {
    const gastosEfectivoList = gastosList.filter(g => g.metodoPago === 'efectivo');
    const gastosTarjetaList = gastosList.filter(g => g.metodoPago === 'tarjeta');
    const gastosTransferenciaList = gastosList.filter(g => g.metodoPago === 'transferencia');
    gastosEfectivo = gastosEfectivoList.reduce((sum, g) => sum + parseFloat(g.monto), 0);
    gastosTarjeta = gastosTarjetaList.reduce((sum, g) => sum + parseFloat(g.monto), 0);
    gastosTransferencia = gastosTransferenciaList.reduce((sum, g) => sum + parseFloat(g.monto), 0);
    totalGastos = gastosList.reduce((sum, g) => sum + parseFloat(g.monto), 0);
    
    gastosTarjetaAzteca = gastosTarjetaList.filter(g => g.banco === 'Azteca').reduce((sum, g) => sum + parseFloat(g.monto), 0);
    gastosTarjetaBbva = gastosTarjetaList.filter(g => g.banco === 'BBVA').reduce((sum, g) => sum + parseFloat(g.monto), 0);
    gastosTarjetaMp = gastosTarjetaList.filter(g => g.banco === 'Mercado Pago').reduce((sum, g) => sum + parseFloat(g.monto), 0);
    
    gastosTransferenciaAzteca = gastosTransferenciaList.filter(g => g.banco === 'Azteca').reduce((sum, g) => sum + parseFloat(g.monto), 0);
    gastosTransferenciaBbva = gastosTransferenciaList.filter(g => g.banco === 'BBVA').reduce((sum, g) => sum + parseFloat(g.monto), 0);
    gastosTransferenciaMp = gastosTransferenciaList.filter(g => g.banco === 'Mercado Pago').reduce((sum, g) => sum + parseFloat(g.monto), 0);
    
    let gastosTableRows = '';
    gastosList.forEach(function(g) {
      gastosTableRows += 
        '<tr class="hover:bg-gray-50 transition-colors">' +
          '<td class="px-4 py-3 text-sm text-gray-900">' + moment(g.createdAt).format('DD/MM/YYYY HH:mm') + '</td>' +
          '<td class="px-4 py-3 text-sm text-gray-900">' + g.motivo + '</td>' +
          '<td class="px-4 py-3 text-sm font-medium text-gray-900 text-right">' + formatCurrency(parseFloat(g.monto)) + '</td>' +
          '<td class="px-4 py-3 text-sm text-gray-500 capitalize">' + g.metodoPago + '</td>' +
          '<td class="px-4 py-3 text-sm text-gray-500">' + (g.banco || '-') + '</td>' +
          '<td class="px-4 py-3 text-sm text-gray-500">' + (g.usuario ? g.usuario.nombre : 'N/A') + '</td>' +
        '</tr>';
    });
    
    let tarjetaDetalle = '';
    if (gastosTarjetaList.length > 0) {
      tarjetaDetalle = 
        '<div class="mt-2 text-xs text-gray-600 space-y-1">' +
          (gastosTarjetaAzteca > 0 ? '<p class="flex items-center"><span class="w-2 h-2 bg-blue-400 rounded-full mr-2"></span>Azteca: ' + formatCurrency(gastosTarjetaAzteca) + '</p>' : '') +
          (gastosTarjetaBbva > 0 ? '<p class="flex items-center"><span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>BBVA: ' + formatCurrency(gastosTarjetaBbva) + '</p>' : '') +
          (gastosTarjetaMp > 0 ? '<p class="flex items-center"><span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>Mercado Pago: ' + formatCurrency(gastosTarjetaMp) + '</p>' : '') +
        '</div>';
    }
    
    let transferenciaDetalle = '';
    if (gastosTransferenciaList.length > 0) {
      transferenciaDetalle = 
        '<div class="mt-2 text-xs text-gray-600 space-y-1">' +
          (gastosTransferenciaAzteca > 0 ? '<p class="flex items-center"><span class="w-2 h-2 bg-purple-400 rounded-full mr-2"></span>Azteca: ' + formatCurrency(gastosTransferenciaAzteca) + '</p>' : '') +
          (gastosTransferenciaBbva > 0 ? '<p class="flex items-center"><span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>BBVA: ' + formatCurrency(gastosTransferenciaBbva) + '</p>' : '') +
          (gastosTransferenciaMp > 0 ? '<p class="flex items-center"><span class="w-2 h-2 bg-purple-600 rounded-full mr-2"></span>Mercado Pago: ' + formatCurrency(gastosTransferenciaMp) + '</p>' : '') +
        '</div>';
    }
    
    gastosHtml = 
      '<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">' +
        '<div class="flex items-center mb-4">' +
          '<i class="fas fa-receipt text-2xl text-gray-600 mr-3"></i>' +
          '<h3 class="text-xl font-bold text-gray-800">Gastos del Período</h3>' +
        '</div>' +
        '<div class="bg-white rounded-lg border border-gray-200 overflow-hidden mb-4">' +
          '<table class="w-full">' +
            '<thead class="bg-gradient-to-r from-gray-50 to-gray-100">' +
              '<tr>' +
                '<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Fecha</th>' +
                '<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Motivo</th>' +
                '<th class="px-4 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Monto</th>' +
                '<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Método</th>' +
                '<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Banco</th>' +
                '<th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Registrado por</th>' +
              '</tr>' +
            '</thead>' +
            '<tbody class="divide-y divide-gray-200">' +
              gastosTableRows +
            '</tbody>' +
          '</table>' +
        '</div>' +
        '<div class="grid md:grid-cols-3 gap-4 mb-4">' +
          '<div class="bg-red-50 rounded-lg p-4 border-l-4 border-red-500">' +
            '<p class="text-sm text-gray-600 mb-1">Total Efectivo</p>' +
            '<p class="text-xl font-bold text-red-600">' + formatCurrency(gastosEfectivo) + '</p>' +
          '</div>' +
          '<div class="bg-orange-50 rounded-lg p-4 border-l-4 border-orange-500">' +
            '<p class="text-sm text-gray-600 mb-1">Total Tarjeta</p>' +
            '<p class="text-xl font-bold text-orange-600">' + formatCurrency(gastosTarjeta) + '</p>' +
            tarjetaDetalle +
          '</div>' +
          '<div class="bg-pink-50 rounded-lg p-4 border-l-4 border-pink-500">' +
            '<p class="text-sm text-gray-600 mb-1">Total Transferencia</p>' +
            '<p class="text-xl font-bold text-pink-600">' + formatCurrency(gastosTransferencia) + '</p>' +
            transferenciaDetalle +
          '</div>' +
        '</div>' +
        '<div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-lg p-4 border border-gray-200">' +
          '<p class="text-sm text-gray-600 mb-1">Total Gastos</p>' +
          '<p class="text-3xl font-bold text-gray-800">' + formatCurrency(totalGastos) + '</p>' +
        '</div>' +
      '</div>';
  }
  
  // Detectar si es un corte de bancos (no tiene ventas en efectivo pero sí en tarjeta o transferencia)
  const esCorteBancos = parseFloat(corte.ventasEfectivo || 0) === 0 && 
                       (parseFloat(corte.ventasTarjeta || 0) > 0 || parseFloat(corte.ventasTransferencia || 0) > 0);
  
  // Calcular saldo esperado
  const saldoInicial = parseFloat(corte.saldoInicial || 0);
  const totalVentas = parseFloat(corte.totalVentas || 0);
  const saldoEsperado = saldoInicial + totalVentas - totalGastos;
  
  // Calcular totales de saldos finales
  const saldoFinalEfectivo = parseFloat(corte.saldoFinalEfectivo || 0);
  const saldoFinalTarjeta = parseFloat(corte.saldoFinalTarjetaAzteca || 0) + parseFloat(corte.saldoFinalTarjetaBbva || 0) + parseFloat(corte.saldoFinalTarjetaMp || 0);
  const saldoFinalTransferencia = parseFloat(corte.saldoFinalTransferencia || 0);
  // Para corte de bancos, el total solo incluye tarjeta + transferencia
  const saldoFinalTotal = esCorteBancos ? (saldoFinalTarjeta + saldoFinalTransferencia) : parseFloat(corte.saldoFinal || 0);
  
  // Calcular diferencia
  const diferencia = parseFloat(corte.diferencia || 0);
  const diferenciaEsNegativa = diferencia < 0;
%>
