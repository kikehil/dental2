<%- include('../layout', { body: `
<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-xl shadow-sm p-6">
    <form action="/pacientes/${paciente.id}/editar" method="POST" class="space-y-8">
      <div>
        <h3 class="text-lg font-bold text-gray-800 mb-4"><i class="fas fa-user text-primary-500 mr-2"></i>Datos Personales</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Nombre *</label>
            <input type="text" name="nombre" required value="${paciente.nombre}"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Apellido *</label>
            <input type="text" name="apellido" required value="${paciente.apellido}"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Fecha de Nacimiento</label>
            <input type="date" name="fechaNacimiento" value="${paciente.fechaNacimiento ? moment(paciente.fechaNacimiento).format('YYYY-MM-DD') : ''}"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Género</label>
            <select name="genero" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
              <option value="">Seleccionar</option>
              <option value="masculino" ${paciente.genero === 'masculino' ? 'selected' : ''}>Masculino</option>
              <option value="femenino" ${paciente.genero === 'femenino' ? 'selected' : ''}>Femenino</option>
              <option value="otro" ${paciente.genero === 'otro' ? 'selected' : ''}>Otro</option>
            </select>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-bold text-gray-800 mb-4"><i class="fas fa-phone text-primary-500 mr-2"></i>Contacto</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Teléfono *</label>
            <input type="tel" name="telefono" required value="${paciente.telefono || ''}"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
            <input type="email" name="email" value="${paciente.email || ''}"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2">Dirección</label>
            <input type="text" name="direccion" value="${paciente.direccion || ''}"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-bold text-gray-800 mb-4"><i class="fas fa-notes-medical text-primary-500 mr-2"></i>Antecedentes</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Alergias</label>
            <textarea name="alergias" rows="2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">${paciente.antecedentes?.alergias || ''}</textarea>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Enfermedades</label>
            <textarea name="enfermedades" rows="2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">${paciente.antecedentes?.enfermedades || ''}</textarea>
          </div>
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2">Medicamentos</label>
            <textarea name="medicamentos" rows="2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500">${paciente.antecedentes?.medicamentos || ''}</textarea>
          </div>
        </div>
      </div>

      <div class="flex justify-end gap-4">
        <a href="/pacientes/${paciente.id}" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Cancelar</a>
        <button type="submit" class="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700">
          <i class="fas fa-save mr-2"></i> Guardar
        </button>
      </div>
    </form>
  </div>
</div>
`}) %>

