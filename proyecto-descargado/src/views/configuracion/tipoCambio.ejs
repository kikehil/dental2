<%- include('../layout', { body: `
<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
    <div class="flex justify-end items-center mb-6">
      <a href="/configuracion" class="text-gray-500 hover:text-gray-700">
        <i class="fas fa-arrow-left mr-2"></i>Volver
      </a>
    </div>

    ` + (success ? `
    <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
      ` + success + `
    </div>
    ` : '') + `

    ` + (error ? `
    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      ` + error + `
    </div>
    ` : '') + `

    <form method="POST" action="/configuracion/tipo-cambio" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Tipo de Cambio USD/MXN *</label>
        <input type="number" name="tipoCambio" step="0.0001" min="0.0001" value="` + parseFloat(configTipoCambio.tipoCambio) + `" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
        <p class="text-xs text-gray-500 mt-1">Ingrese el tipo de cambio actual de dólar a peso mexicano</p>
      </div>

      <div class="flex gap-2 pt-4">
        <button type="submit" class="flex-1 bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg font-medium">
          <i class="fas fa-save mr-2"></i>Guardar Configuración
        </button>
        <a href="/configuracion" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-medium">
          Cancelar
        </a>
      </div>
    </form>

    ` + (configTipoCambio ? `
    <div class="mt-6 bg-gray-50 rounded-lg p-4">
      <p class="text-sm text-gray-600 mb-1">Última actualización</p>
      <p class="font-medium text-gray-800">` + moment(configTipoCambio.updatedAt).format('DD/MM/YYYY HH:mm') + `</p>
    </div>
    ` : '') + `
  </div>
</div>
` }) %>

