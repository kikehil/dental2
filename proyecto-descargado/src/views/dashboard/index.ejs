<%- include('../layout', { body: `
<!-- KPIs -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-primary-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500 text-sm">Citas Hoy</p>
        <p class="text-3xl font-bold text-gray-800">${kpis.citasHoy}</p>
      </div>
      <div class="bg-primary-100 p-3 rounded-lg">
        <i class="fas fa-calendar-check text-2xl text-primary-600"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-secondary-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500 text-sm">Ventas Hoy</p>
        <p class="text-3xl font-bold text-gray-800">${kpis.ventasHoy.monto}</p>
        <p class="text-xs text-gray-400">${kpis.ventasHoy.cantidad} ventas</p>
      </div>
      <div class="bg-secondary-100 p-3 rounded-lg">
        <i class="fas fa-dollar-sign text-2xl text-secondary-600"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-purple-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500 text-sm">Total Pacientes</p>
        <p class="text-3xl font-bold text-gray-800">${kpis.totalPacientes}</p>
      </div>
      <div class="bg-purple-100 p-3 rounded-lg">
        <i class="fas fa-users text-2xl text-purple-600"></i>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-amber-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-500 text-sm">Doctores Activos</p>
        <p class="text-3xl font-bold text-gray-800">${kpis.doctoresActivos}</p>
      </div>
      <div class="bg-amber-100 p-3 rounded-lg">
        <i class="fas fa-user-md text-2xl text-amber-600"></i>
      </div>
    </div>
  </div>
</div>

<div class="grid lg:grid-cols-2 gap-6">
  <!-- Próximas Citas -->
  <div class="bg-white rounded-xl shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
      <i class="fas fa-clock text-primary-500"></i>
      Próximas Citas de Hoy
    </h3>
    ${proximasCitas.length > 0 ? '<div class="space-y-3">' + proximasCitas.map(c => 
      '<div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg">' +
        '<div class="text-center bg-primary-100 px-3 py-2 rounded-lg">' +
          '<p class="text-lg font-bold text-primary-600">' + c.horaInicio + '</p>' +
        '</div>' +
        '<div class="flex-1">' +
          '<p class="font-medium text-gray-800">' + c.paciente.nombre + ' ' + c.paciente.apellido + '</p>' +
          '<p class="text-sm text-gray-500">Dr. ' + c.doctor.nombre + ' ' + c.doctor.apellido + '</p>' +
        '</div>' +
        '<span class="px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full">' + c.estado + '</span>' +
      '</div>'
    ).join('') + '</div>' : '<p class="text-gray-500 text-center py-8">No hay citas programadas para hoy</p>'}
    <a href="/citas" class="block text-center text-primary-600 hover:text-primary-700 mt-4 font-medium">
      Ver todas las citas <i class="fas fa-arrow-right ml-1"></i>
    </a>
  </div>

  <!-- Ventas Recientes -->
  <div class="bg-white rounded-xl shadow-sm p-6">
    <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
      <i class="fas fa-receipt text-secondary-500"></i>
      Ventas Recientes
    </h3>
    ${ventasRecientes.length > 0 ? '<div class="space-y-3">' + ventasRecientes.map(v => 
      '<div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">' +
        '<div>' +
          '<p class="font-medium text-gray-800">' + v.folio + '</p>' +
          '<p class="text-sm text-gray-500">' + (v.paciente ? v.paciente.nombre + ' ' + v.paciente.apellido : 'Cliente general') + '</p>' +
        '</div>' +
        '<p class="font-bold text-secondary-600">$' + parseFloat(v.total).toFixed(2) + '</p>' +
      '</div>'
    ).join('') + '</div>' : '<p class="text-gray-500 text-center py-8">No hay ventas recientes</p>'}
    <a href="/pos/ventas" class="block text-center text-secondary-600 hover:text-secondary-700 mt-4 font-medium">
      Ver historial <i class="fas fa-arrow-right ml-1"></i>
    </a>
  </div>
</div>
`}) %>

