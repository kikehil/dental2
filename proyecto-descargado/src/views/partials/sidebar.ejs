<aside class="fixed left-0 top-0 w-64 h-full bg-gradient-to-b from-primary-800 to-primary-900 text-white shadow-xl z-50">
  <!-- Logo -->
  <div class="p-6 border-b border-primary-700">
    <div class="flex items-center gap-3">
      <div class="bg-white p-2 rounded-lg">
        <i class="fas fa-tooth text-2xl text-primary-600"></i>
      </div>
      <div>
        <h1 class="font-bold text-lg">Clínica Dental</h1>
        <p class="text-xs text-primary-300">Sistema de Gestión</p>
      </div>
    </div>
  </div>

  <!-- Navegación -->
  <nav class="p-4 pb-24 overflow-y-auto" style="max-height: calc(100vh - 180px);">
    <ul class="space-y-2">
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/pos'))) { %>
      <li>
        <a href="/pos" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath === '/pos' ? 'bg-primary-700' : '' %>">
          <i class="fas fa-cash-register w-5"></i>
          <span>Punto de Venta</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/aplazos'))) { %>
      <li>
        <a href="/aplazos" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath === '/aplazos' ? 'bg-primary-700' : '' %>">
          <i class="fas fa-calendar-check w-5"></i>
          <span>A Plazos</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/pacientes'))) { %>
      <li>
        <a href="/pacientes" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/pacientes') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-users w-5"></i>
          <span>Pacientes</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/doctores'))) { %>
      <li>
        <a href="/doctores" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/doctores') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-user-md w-5"></i>
          <span>Doctores</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/laboratorios'))) { %>
      <li>
        <a href="/laboratorios" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/laboratorios') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-flask w-5"></i>
          <span>Laboratorios</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/pos/ventas') || hasModuleAccess('/cortes') || hasModuleAccess('/gastos'))) { %>
      <li class="pt-4 border-t border-primary-700 mt-4">
        <span class="px-4 text-xs text-primary-400 uppercase tracking-wider">Ventas</span>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/pos/ventas'))) { %>
      <li>
        <a href="/pos/ventas" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath === '/pos/ventas' ? 'bg-primary-700' : '' %>">
          <i class="fas fa-receipt w-5"></i>
          <span>Historial Ventas</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/cortes'))) { %>
      <li>
        <a href="/cortes" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/cortes') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-cut w-5"></i>
          <span>Cortes de Caja</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/retiros'))) { %>
      <li>
        <a href="/retiros" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/retiros') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-hand-holding-usd w-5"></i>
          <span>Historial de Retiros</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && (user.rol === 'admin' || hasModuleAccess('/gastos'))) { %>
      <li>
        <a href="/gastos" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/gastos') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-money-bill-wave w-5"></i>
          <span>Gastos</span>
        </a>
      </li>
      <% } %>
      
      <% if (user && user.rol === 'admin') { %>
      <li class="pt-4 border-t border-primary-700 mt-4">
        <span class="px-4 text-xs text-primary-400 uppercase tracking-wider">Administración</span>
      </li>
      <li>
        <a href="/vault" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/vault') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-vault w-5"></i>
          <span>Vault</span>
        </a>
      </li>
      <li>
        <a href="/configuracion" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-primary-700 transition <%= currentPath.startsWith('/configuracion') ? 'bg-primary-700' : '' %>">
          <i class="fas fa-cog w-5"></i>
          <span>Configuración</span>
        </a>
      </li>
      <% } %>
    </ul>
  </nav>

  <!-- Usuario -->
  <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-primary-700">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-primary-600 rounded-full flex items-center justify-center">
        <i class="fas fa-user"></i>
      </div>
      <div class="flex-1">
        <p class="text-sm font-medium truncate"><%= user ? user.nombre : 'Usuario' %></p>
        <p class="text-xs text-primary-300 capitalize"><%= user ? user.rol : '' %></p>
      </div>
      <a href="/logout" class="text-primary-300 hover:text-white" title="Cerrar sesión">
        <i class="fas fa-sign-out-alt"></i>
      </a>
    </div>
  </div>
</aside>

